---
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
const sortedPosts = posts.sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
const featuredPost = sortedPosts.find(post => post.data.featured) || sortedPosts[0];
const otherPosts = sortedPosts.filter(post => post.slug !== featuredPost.slug).slice(0, 4);

const articles = [
  {
    featured: true,
    slug: featuredPost?.slug || 'article',
    image: featuredPost?.data.image || '/blog/images/placeholder.jpg',
    category: featuredPost?.data.category || 'Featured',
    date: featuredPost?.data.date || '2026-02-16',
    readTime: `${featuredPost?.data.readTime || 10} min read`,
    title: featuredPost?.data.title || 'The Future of AI',
    excerpt: featuredPost?.data.excerpt || 'Explore the cutting-edge developments in AI.',
  },
  ...otherPosts.map(post => ({
    featured: false,
    slug: post.slug,
    image: post.data.image,
    category: post.data.category,
    date: post.data.date,
    readTime: `${post.data.readTime} min read`,
    title: post.data.title,
  }))
];
---

<section class="featured-section" id="featured">
  <div class="container">
    <div class="section-header">
      <div class="header-badge">
        <span class="badge-dot"></span>
        Latest Content
      </div>
      <h2>Featured Articles</h2>
      <p>Discover the latest trends, tutorials, and insights from the world of AI</p>
    </div>
  </div>
  
  <div class="featured-grid">
    {articles.map((article, index) => (
      <article 
        class={`featured-card ${article.featured ? 'featured' : ''}`}
        data-animate="card"
        style={`--delay: ${index * 0.1}s`}
      >
        <a href={`/blog/${article.slug}`} class="card-link">
          <div class="card-image-wrapper">
            <img src={article.image} alt={article.title} class="card-image" loading="lazy" />
            <span class="card-category">{article.category}</span>
            <div class="card-overlay">
              <span class="read-more">Read Article</span>
            </div>
          </div>
          <div class="card-content">
            <div class="card-meta">
              <span class="date">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                  <line x1="16" y1="2" x2="16" y2="6"></line>
                  <line x1="8" y1="2" x2="8" y2="6"></line>
                  <line x1="3" y1="10" x2="21" y2="10"></line>
                </svg>
                {article.date}
              </span>
              <span class="read-time">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"></circle>
                  <polyline points="12 6 12 12 16 14"></polyline>
                </svg>
                {article.readTime}
              </span>
            </div>
            <h3 class="card-title">{article.title}</h3>
            {article.excerpt && <p class="card-excerpt">{article.excerpt}</p>}
            <div class="card-footer">
              <span class="card-read-time">
                Read more
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M5 12h14M12 5l7 7-7 7"/>
                </svg>
              </span>
            </div>
          </div>
          <div class="card-shine"></div>
        </a>
      </article>
    ))}
  </div>
  
  <div class="container">
    <div class="view-all-wrapper">
      <a href="/blog" class="view-all-btn">
        View All Articles
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M5 12h14M12 5l7 7-7 7"/>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .featured-section {
    padding: 6rem 0;
    background: var(--bg-main);
    position: relative;
    overflow: hidden;
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .featured-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--purple-primary), transparent);
    opacity: 0.2;
  }

  .section-header {
    margin-bottom: 3rem;
  }

  .header-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: rgba(139, 92, 246, 0.1);
    border: 1px solid rgba(139, 92, 246, 0.2);
    padding: 0.4rem 1rem;
    border-radius: 4px;
    font-size: 0.75rem;
    color: var(--purple-light);
    font-weight: 600;
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .section-header h2 {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 3rem;
    font-weight: 700;
    color: var(--gray-800);
    margin-bottom: 0.5rem;
    letter-spacing: -0.02em;
  }

  .section-header p {
    color: var(--gray-500);
    font-size: 1.1rem;
    max-width: 600px;
  }

  .featured-grid {
    max-width: 1400px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-auto-rows: minmax(200px, auto);
    gap: 1.5rem;
  }

  .featured-card {
    background: var(--card-bg);
    border: 1px solid var(--border-color);
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    opacity: 0;
    transform: translateY(20px);
  }

  .featured-card.animate {
    opacity: 1;
    transform: translateY(0);
  }

  .featured-card:hover {
    border-color: var(--purple-primary);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
  }

  .featured-card.featured {
    grid-column: span 2;
    grid-row: span 2;
  }

  .card-link {
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .featured-card.featured .card-link {
    flex-direction: column;
  }

  .card-image-wrapper {
    position: relative;
    overflow: hidden;
  }

  .card-image {
    width: 100%;
    height: 180px;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .featured-card.featured .card-image {
    height: 380px;
  }

  .featured-card:hover .card-image {
    transform: scale(1.05);
  }

  .card-category {
    position: absolute;
    top: 1rem;
    left: 1rem;
    background: var(--purple-primary);
    color: var(--white);
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    z-index: 2;
  }

  .card-content {
    padding: 1.25rem;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .card-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
    font-size: 0.75rem;
    color: var(--gray-500);
  }

  .card-title {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 1.2rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
    line-height: 1.3;
    color: var(--gray-800);
    transition: color 0.3s ease;
  }

  .featured-card:hover .card-title {
    color: var(--purple-primary);
  }

  .featured-card.featured .card-title {
    font-size: 2rem;
  }

  .card-excerpt {
    color: var(--gray-500);
    font-size: 0.95rem;
    line-height: 1.5;
    margin-bottom: 1rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .card-footer {
    margin-top: auto;
    padding-top: 1rem;
    border-top: 1px solid var(--border-color);
  }

  .card-read-time {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    color: var(--purple-light);
    font-size: 0.85rem;
    font-weight: 600;
  }

  .view-all-wrapper {
    margin-top: 3rem;
  }

  .view-all-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: #f1f5f9;
    color: var(--gray-800);
    border: 1px solid var(--border-color);
    padding: 0.8rem 1.5rem;
    border-radius: 6px;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.9rem;
    transition: all 0.3s ease;
  }

  .view-all-btn:hover {
    background: var(--purple-primary);
    color: var(--white);
    transform: translateY(-2px);
  }

  @media (max-width: 1024px) {
    .featured-grid {
      grid-template-columns: repeat(2, 1fr);
    }
    .featured-card.featured {
      grid-column: span 2;
      grid-row: span 1;
    }
    .section-header h2 { font-size: 2.5rem; }
  }

  @media (max-width: 768px) {
    .featured-grid {
      grid-template-columns: 1fr;
    }
    .featured-card.featured {
      grid-column: span 1;
    }
    .featured-card.featured .card-image {
      height: 220px;
    }
    .section-header h2 { font-size: 2rem; }
  }
</style>

<script>
  // Card animations
  const cards = document.querySelectorAll('[data-animate="card"]');
  
  const cardObserver = new IntersectionObserver((entries) => {
    entries.forEach((entry, index) => {
      if (entry.isIntersecting) {
        const delay = entry.target.getAttribute('style')?.match(/--delay:\s*(\d+\.?\d*)s/)?.[1] || '0';
        setTimeout(() => {
          entry.target.classList.add('animate');
        }, parseFloat(delay) * 1000);
      }
    });
  }, { threshold: 0.1, rootMargin: '0px 0px -30px 0px' });

  cards.forEach(card => cardObserver.observe(card));
</script>
