---

<section class="categories-section" id="categories">
  <div class="categories-bg">
    <div class="bg-shape shape-1"></div>
    <div class="bg-shape shape-2"></div>
  </div>
  
  <div class="section-header">
    <div class="header-badge">
      <span class="badge-dot"></span>
      Browse by Topic
    </div>
    <h2>Explore Categories</h2>
    <p>Find exactly what you're looking for across different AI domains</p>
  </div>
  
  <div class="categories-grid">
    {categories.map((category, index) => (
      <a 
        href={category.link}
        class="category-card" 
        data-animate="category"
        style={`--delay: ${index * 0.08}s; --accent: ${category.color}`}
      >
        <div class="card-inner">
          <div class="category-icon" style={`background: linear-gradient(135deg, ${category.color}15, ${category.color}08)`}>
            <span style={`color: ${category.color}`}>{category.icon}</span>
          </div>
          <h4>{category.title}</h4>
          <p>{category.description}</p>
          <div class="card-arrow">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </div>
        </div>
        <div class="card-glow"></div>
      </a>
    ))}
  </div>
</section>

<style>
  .categories-section {
    padding: 7rem 2rem;
    background: var(--gray-800);
    position: relative;
    overflow: hidden;
  }

  .categories-bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    overflow: hidden;
  }

  .bg-shape {
    position: absolute;
    border-radius: 50%;
    filter: blur(100px);
    opacity: 0.3;
  }

  .bg-shape.shape-1 {
    width: 500px;
    height: 500px;
    background: var(--purple-primary);
    top: -200px;
    left: -100px;
    animation: bgFloat 20s ease-in-out infinite;
  }

  .bg-shape.shape-2 {
    width: 400px;
    height: 400px;
    background: var(--purple-light);
    bottom: -150px;
    right: -100px;
    animation: bgFloat 25s ease-in-out infinite reverse;
  }

  @keyframes bgFloat {
    0%, 100% { transform: translate(0, 0); }
    50% { transform: translate(50px, 30px); }
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
    position: relative;
    z-index: 1;
  }

  .header-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.15);
    padding: 0.4rem 1rem;
    border-radius: 50px;
    font-size: 0.8rem;
    color: var(--purple-light);
    font-weight: 500;
    margin-bottom: 1rem;
  }

  .header-badge .badge-dot {
    width: 6px;
    height: 6px;
    background: var(--purple-light);
    border-radius: 50%;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.5; transform: scale(1.2); }
  }

  .section-header h2 {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: var(--white);
    letter-spacing: -0.02em;
  }

  .section-header p {
    color: var(--gray-400);
    font-size: 1.15rem;
    max-width: 550px;
    margin: 0 auto;
  }

  .categories-grid {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem;
    position: relative;
    z-index: 1;
  }

  .category-card {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 20px;
    padding: 0;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
    position: relative;
    overflow: hidden;
    opacity: 0;
    transform: translateY(30px);
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .category-card.animate {
    opacity: 1;
    transform: translateY(0);
  }

  .category-card:hover {
    transform: translateY(-8px);
    border-color: var(--accent);
    background: rgba(255, 255, 255, 0.06);
  }

  .card-glow {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 50% 0%, var(--accent), transparent 70%);
    opacity: 0;
    transition: opacity 0.4s ease;
    pointer-events: none;
  }

  .category-card:hover .card-glow {
    opacity: 0.1;
  }

  .card-inner {
    padding: 2rem;
    position: relative;
    z-index: 1;
  }

  .category-icon {
    width: 65px;
    height: 65px;
    border-radius: 18px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.25rem;
    font-size: 1.75rem;
    transition: all 0.4s ease;
    position: relative;
  }

  .category-icon::after {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 18px;
    background: var(--accent);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .category-card:hover .category-icon {
    transform: scale(1.1) rotate(5deg);
  }

  .category-card:hover .category-icon::after {
    opacity: 0.15;
  }

  .category-card h4 {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 1.15rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: var(--white);
    transition: color 0.3s ease;
  }

  .category-card:hover h4 {
    color: var(--accent);
  }

  .category-card p {
    font-size: 0.85rem;
    color: var(--gray-400);
    transition: color 0.3s ease;
  }

  .card-arrow {
    position: absolute;
    bottom: 1.5rem;
    right: 1.5rem;
    width: 36px;
    height: 36px;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--gray-500);
    opacity: 0;
    transform: translateX(-10px);
    transition: all 0.3s ease;
  }

  .category-card:hover .card-arrow {
    opacity: 1;
    transform: translateX(0);
    color: var(--accent);
  }

  @media (max-width: 1024px) {
    .categories-grid {
      grid-template-columns: repeat(2, 1fr);
    }
    .section-header h2 { font-size: 2.5rem; }
  }

  @media (max-width: 768px) {
    .categories-grid {
      grid-template-columns: 1fr;
    }
    .section-header h2 { font-size: 2rem; }
  }
</style>

<script>
  const categories = document.querySelectorAll('[data-animate="category"]');
  
  const catObserver = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        const delay = entry.target.getAttribute('style')?.match(/--delay:\s*(\d+\.?\d*)s/)?.[1] || '0';
        setTimeout(() => {
          entry.target.classList.add('animate');
        }, parseFloat(delay) * 1000);
      }
    });
  }, { threshold: 0.1, rootMargin: '0px 0px -20px 0px' });

  categories.forEach(cat => catObserver.observe(cat));
</script>
