---
import Ticker from './Ticker.astro';
import { getCollection } from 'astro:content';
import { getToolsFromSheet } from '../lib/sheets';

const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/blog', label: 'News' },
  { href: '/tools', label: 'Tools' },
  { href: '/contact', label: 'Newsletter' },
];

const posts = await getCollection('blog');
const tools = await getToolsFromSheet();

const searchData = [
  ...posts.map(post => ({
    title: post.data.title,
    excerpt: post.data.excerpt,
    url: `/blog/${post.slug}`,
    category: post.data.category,
    type: 'Article'
  })),
  ...tools.map(tool => ({
    title: tool.name,
    excerpt: tool.description,
    url: tool.link,
    category: tool.category,
    type: 'Tool'
  }))
];
---

<header id="header">
  <Ticker />
  <div class="header-content">
    <a href="/" class="logo">
      <img
        src="https://aidevdaily.com/wp-content/uploads/2025/02/e49aaf2e-a5be-4656-a154-8c7ad3090d3b-1024x242.png"
        alt="AI Dev Daily"
        class="logo-img"
      />
    </a>
    <nav>
      <ul class="nav-links">
        {navLinks.map((link) => (
          <li>
            <a href={link.href}>{link.label}</a>
          </li>
        ))}
      </ul>
      
      <div class="header-actions">
        <button id="searchBtn" class="search-btn" aria-label="Search">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="11" cy="11" r="8"></circle>
            <path d="M21 21l-4.35-4.35"></path>
          </svg>
        </button>
        <a href="/contact" class="cta-btn">
          <span>Subscribe</span>
        </a>
      </div>
    </nav>
    <div class="menu-toggle" id="menuToggle">
      <span></span>
      <span></span>
      <span></span>
    </div>
  </div>
  <div class="header-line"></div>
</header>

<!-- Search Modal -->
<div id="searchModal" class="search-modal">
  <div class="search-overlay"></div>
  <div class="search-container">
    <div class="search-header">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <circle cx="11" cy="11" r="8"></circle>
        <path d="M21 21l-4.35-4.35"></path>
      </svg>
      <input type="text" id="searchInput" placeholder="Search news, tools, and research..." autofocus />
      <button id="closeSearch" class="close-search">&times;</button>
    </div>
    <div id="searchData" data-items={JSON.stringify(searchData)}></div>
    <div id="searchResults" class="search-results">
      <p class="search-placeholder">Begin typing to find articles...</p>
    </div>
  </div>
</div>

<div class="mobile-menu" id="mobileMenu">
  {navLinks.map((link) => (
    <a href={link.href}>{link.label}</a>
  ))}
  <a href="/contact" class="mobile-cta">Subscribe Free</a>
</div>

<style>
  header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--border-color);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  header.scrolled {
    background: rgba(255, 255, 255, 0.95);
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.05);
  }

  .header-line {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--purple-primary), transparent);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  header.scrolled .header-line {
    opacity: 0.3;
  }

  .header-content {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0.75rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
    transition: transform 0.3s ease;
  }

  .logo:hover {
    transform: scale(1.02);
  }

  .logo-img {
    height: 32px;
    width: auto;
    /* Removed filter: brightness(0) invert(1) for light theme */
  }

  nav {
    display: flex;
    align-items: center;
    gap: 2.5rem;
  }

  .nav-links {
    display: flex;
    gap: 2rem;
    list-style: none;
  }

  .nav-links a {
    color: var(--gray-600);
    text-decoration: none;
    font-weight: 500;
    font-size: 0.9rem;
    transition: all 0.3s ease;
    position: relative;
    padding: 0.5rem 0;
  }

  .nav-links a::before {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    width: 0;
    height: 2px;
    background: var(--purple-primary);
    transition: all 0.3s ease;
    transform: translateX(-50%);
    border-radius: 2px;
  }

  .nav-links a:hover {
    color: var(--purple-primary);
  }

  .nav-links a:hover::before {
    width: 100%;
  }

  .header-actions {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .search-btn {
    background: none;
    border: none;
    color: var(--gray-500);
    cursor: pointer;
    padding: 0.5rem;
    transition: all 0.3s ease;
    display: flex;
  }

  .search-btn:hover {
    color: var(--purple-primary);
    transform: scale(1.1);
  }

  /* Search Modal */
  .search-modal {
    position: fixed;
    inset: 0;
    z-index: 2000;
    display: none;
    align-items: flex-start;
    justify-content: center;
    padding-top: 8rem;
  }

  .search-modal.active {
    display: flex;
  }

  .search-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.4);
    backdrop-filter: blur(8px);
  }

  .search-container {
    position: relative;
    z-index: 1;
    width: 100%;
    max-width: 700px;
    background: var(--white);
    border: 1px solid var(--border-color);
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 30px 60px rgba(0, 0, 0, 0.1);
    transform: translateY(-20px);
    transition: transform 0.3s ease;
  }

  .search-modal.active .search-container {
    transform: translateY(0);
  }

  .search-header {
    display: flex;
    align-items: center;
    padding: 1.5rem;
    border-bottom: 1px solid var(--border-color);
    gap: 1rem;
    color: var(--purple-primary);
  }

  .search-header input {
    flex: 1;
    background: none;
    border: none;
    color: var(--gray-800);
    font-size: 1.25rem;
    outline: none;
  }

  .close-search {
    background: none;
    border: none;
    color: var(--gray-400);
    font-size: 2rem;
    line-height: 1;
    cursor: pointer;
    transition: color 0.3s ease;
  }

  .close-search:hover {
    color: var(--gray-800);
  }

  .search-results {
    max-height: 480px;
    overflow-y: auto;
    padding: 1rem;
  }

  .search-item {
    display: block;
    padding: 1rem;
    text-decoration: none;
    border-radius: 8px;
    transition: all 0.2s ease;
    border-bottom: 1px solid var(--border-color);
  }

  .search-item:last-child {
    border-bottom: none;
  }

  .search-item:hover {
    background: #f8fafc;
  }

  .search-item h4 {
    color: var(--gray-800);
    margin-bottom: 0.25rem;
    font-size: 1rem;
  }

  .search-item .search-meta {
    display: flex;
    gap: 0.75rem;
    font-size: 0.75rem;
    color: var(--purple-primary);
    font-weight: 600;
    text-transform: uppercase;
  }

  .search-item p {
    font-size: 0.85rem;
    color: var(--gray-500);
    margin-top: 0.5rem;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .search-placeholder {
    padding: 3rem 1rem;
    text-align: center;
    color: var(--gray-400);
  }

  .mobile-cta {
    display: block;
    margin-top: 2rem;
    background: var(--purple-primary);
    color: var(--white);
    text-align: center;
    padding: 1rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 700;
  }

  .cta-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: var(--purple-primary);
    color: var(--white);
    padding: 0.6rem 1.2rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.85rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border: none;
    cursor: pointer;
  }

  .cta-btn:hover {
    background: var(--purple-dark);
    transform: translateY(-1px);
    box-shadow: 0 4px 20px var(--purple-glow);
  }

  .menu-toggle {
    display: none;
    flex-direction: column;
    gap: 5px;
    cursor: pointer;
    padding: 8px;
    border-radius: 8px;
    transition: background 0.3s ease;
  }

  .menu-toggle:hover {
    background: rgba(255, 255, 255, 0.05);
  }

  .menu-toggle span {
    width: 22px;
    height: 2px;
    background: var(--gray-700);
    transition: all 0.3s ease;
    border-radius: 2px;
  }

  .menu-toggle.active span:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }

  .menu-toggle.active span:nth-child(2) {
    opacity: 0;
  }

  .menu-toggle.active span:nth-child(3) {
    transform: rotate(-45deg) translate(5px, -5px);
  }

  .mobile-menu {
    display: none;
    position: fixed;
    top: 96px; /* 32px ticker + 64px header */
    left: 0;
    right: 0;
    background: var(--white);
    padding: 2rem;
    border-bottom: 1px solid var(--border-color);
    z-index: 999;
    opacity: 0;
    transform: translateY(-10px);
    transition: all 0.3s ease;
    pointer-events: none;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .mobile-menu.active {
    opacity: 1;
    transform: translateY(0);
    pointer-events: all;
  }

  .mobile-menu a {
    display: block;
    padding: 1rem 0;
    color: var(--gray-600);
    text-decoration: none;
    font-size: 1.1rem;
    font-weight: 500;
    border-bottom: 1px solid var(--border-color);
    transition: all 0.3s ease;
  }

  .mobile-menu a:hover {
    color: var(--purple-primary);
    padding-left: 0.5rem;
  }

  @media (max-width: 768px) {
    .nav-links {
      display: none;
    }

    .menu-toggle {
      display: flex;
    }
  }
</style>

<script>
  const header = document.getElementById('header');
  const menuToggle = document.getElementById('menuToggle');
  const mobileMenu = document.getElementById('mobileMenu');
  const searchBtn = document.getElementById('searchBtn');
  const searchModal = document.getElementById('searchModal');
  const closeSearch = document.getElementById('closeSearch');
  const searchOverlay = document.querySelector('.search-overlay');

  window.addEventListener('scroll', () => {
    if (window.scrollY > 50) {
      header?.classList.add('scrolled');
    } else {
      header?.classList.remove('scrolled');
    }
  });

  menuToggle?.addEventListener('click', () => {
    menuToggle.classList.toggle('active');
    mobileMenu?.classList.toggle('active');
  });

  const searchInput = document.getElementById('searchInput') as HTMLInputElement;
  const searchResults = document.getElementById('searchResults');
  const searchDataEl = document.getElementById('searchData');
  const searchItems = JSON.parse(searchDataEl?.dataset.items || '[]');

  searchInput?.addEventListener('input', (e) => {
    const query = (e.target as HTMLInputElement).value.toLowerCase();
    
    if (query.length < 2) {
      if (searchResults) {
        searchResults.innerHTML = '<p class="search-placeholder">Begin typing to find articles and tools...</p>';
      }
      return;
    }

    const filtered = searchItems.filter((item: any) => 
      item.title.toLowerCase().includes(query) || 
      item.excerpt.toLowerCase().includes(query) ||
      item.category.toLowerCase().includes(query)
    );

    if (searchResults) {
      if (filtered.length > 0) {
        searchResults.innerHTML = filtered.map((item: any) => `
          <a href="${item.url}" class="search-item">
            <div class="search-meta">
              <span>${item.type}</span>
              <span>â€¢</span>
              <span>${item.category}</span>
            </div>
            <h4>${item.title}</h4>
            <p>${item.excerpt}</p>
          </a>
        `).join('');
      } else {
        searchResults.innerHTML = '<p class="search-placeholder">No results found for your search.</p>';
      }
    }
  });

  const toggleSearch = () => {
    searchModal?.classList.toggle('active');
    if (searchModal?.classList.contains('active')) {
      searchInput?.focus();
    }
  };

  searchBtn?.addEventListener('click', toggleSearch);
  closeSearch?.addEventListener('click', toggleSearch);
  searchOverlay?.addEventListener('click', toggleSearch);

  // Close on Escape or Toggle on CMD/CTRL + K
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && searchModal?.classList.contains('active')) {
      toggleSearch();
    }
    if ((e.metaKey || e.ctrlKey) && e.key === 'k') {
      e.preventDefault();
      toggleSearch();
    }
  });
</script>
