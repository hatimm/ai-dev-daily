<section class="newsletter-section" id="newsletter">
  <div class="newsletter-container">
    <div class="newsletter-glow glow-1"></div>
    <div class="newsletter-glow glow-2"></div>
    
    <div class="newsletter-content">
      <div class="newsletter-icon">
        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
          <polyline points="22,6 12,13 2,6"/>
        </svg>
      </div>
      
      <div class="header-badge">Newsletter Exclusive</div>
      <h3>Get AI News Delivered Daily</h3>
      <p>Join 50,000+ developers staying ahead of the AI curve. No spam, just quality content.</p>
      
      <form class="newsletter-form" id="newsletterForm">
        <div class="input-wrapper">
          <div class="input-icon">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
              <polyline points="22,6 12,13 2,6"/>
            </svg>
          </div>
          <input type="email" placeholder="Enter your email address" required />
          <div class="input-shine"></div>
        </div>
        <button type="submit">
          <span>Subscribe Free</span>
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </button>
      </form>
      
      <div class="trust-badges">
        <span class="badge">
          <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
            <polyline points="22 4 12 14.01 9 11.01"/>
          </svg>
          No spam
        </span>
        <span class="badge">
          <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
            <polyline points="22 4 12 14.01 9 11.01"/>
          </svg>
          Unsubscribe anytime
        </span>
        <span class="badge">
          <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
            <polyline points="22 4 12 14.01 9 11.01"/>
          </svg>
          50K+ subscribers
        </span>
      </div>
    </div>
    
    <div class="newsletter-shapes">
      <div class="shape shape-1"></div>
      <div class="shape shape-2"></div>
    </div>
  </div>
</section>

<style>
  .newsletter-section {
    padding: 6rem 2rem;
    position: relative;
    overflow: hidden;
    background: var(--bg-main);
  }

  .newsletter-container {
    max-width: 900px;
    margin: 0 auto;
    background: var(--card-bg);
    border: 1px solid var(--border-color);
    border-radius: 12px;
    padding: 4rem;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .newsletter-glow {
    position: absolute;
    border-radius: 50%;
    filter: blur(100px);
    pointer-events: none;
    opacity: 0.4;
  }

  .glow-1 {
    width: 600px;
    height: 600px;
    background: var(--purple-primary);
    top: -300px;
    left: -200px;
    animation: glowFloat 15s ease-in-out infinite;
  }

  .glow-2 {
    width: 400px;
    height: 400px;
    background: var(--purple-dark);
    bottom: -200px;
    right: -100px;
    animation: glowFloat 18s ease-in-out infinite reverse;
  }

  @keyframes glowFloat {
    0%, 100% { transform: translate(0, 0) scale(1); }
    50% { transform: translate(40px, 30px) scale(1.1); }
  }

  .newsletter-content {
    position: relative;
    z-index: 1;
  }

  .newsletter-icon {
    width: 64px;
    height: 64px;
    background: var(--purple-primary);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
    color: var(--white);
  }

  .newsletter h3 {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: var(--gray-800);
    letter-spacing: -0.02em;
  }

  .newsletter-content > p {
    color: var(--gray-500);
    font-size: 1.15rem;
    margin-bottom: 2.5rem;
    max-width: 550px;
    margin-left: auto;
    margin-right: auto;
  }

  .newsletter-form {
    display: flex;
    gap: 0.75rem;
    max-width: 580px;
    margin: 0 auto 2.5rem;
  }

  .input-wrapper {
    position: relative;
    flex: 1;
  }

  .input-icon {
    position: absolute;
    left: 1rem;
    top: 50%;
    transform: translateY(-50%);
    color: var(--gray-600);
    z-index: 1;
  }

  .newsletter-form input {
    width: 100%;
    padding: 0.9rem 1rem 0.9rem 2.75rem;
    border-radius: 6px;
    border: 1px solid var(--border-color);
    background: #f8fafc;
    color: var(--gray-800);
    font-size: 1rem;
    outline: none;
    transition: all 0.3s ease;
  }

  .newsletter-form input::placeholder {
    color: var(--gray-600);
  }

  .newsletter-form input:focus {
    border-color: var(--purple-primary);
    box-shadow: 0 0 0 3px rgba(139, 92, 246, 0.1);
  }

  .newsletter-form button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.9rem 1.75rem;
    border-radius: 6px;
    background: var(--purple-primary);
    color: var(--white);
    border: none;
    font-weight: 700;
    font-size: 0.9rem;
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  .newsletter-form button:hover {
    background: var(--purple-dark);
    transform: translateY(-2px);
    box-shadow: 0 4px 15px var(--purple-glow);
  }

  .trust-badges {
    display: flex;
    justify-content: center;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .trust-badges .badge {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    font-size: 0.85rem;
    color: var(--gray-600);
    font-weight: 500;
  }

  .trust-badges .badge svg {
    color: var(--purple-light);
  }

  .newsletter-shapes {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
    opacity: 0.1;
  }

  .shape {
    position: absolute;
    border: 1px solid var(--purple-primary);
    border-radius: 50%;
    animation: shapeFloat 20s infinite linear;
  }

  .shape-1 {
    width: 200px;
    height: 200px;
    top: -50px;
    right: -50px;
  }

  .shape-2 {
    width: 150px;
    height: 150px;
    bottom: -30px;
    left: -30px;
    animation-reverse: true;
  }

  @media (max-width: 768px) {
    .newsletter-container {
      padding: 2.5rem 1.5rem;
    }
    .newsletter h3 { font-size: 1.75rem; }
    .trust-badges { gap: 1rem; }
    .newsletter-form { flex-direction: column; }
    .newsletter-form button { width: 100%; justify-content: center; }
  }
</style>

<script>
  const newsletterForm = document.getElementById('newsletterForm');
  newsletterForm?.addEventListener('submit', (e) => {
    e.preventDefault();
    const input = e.target.querySelector('input');
    const email = input?.value;
    alert(`Thanks for subscribing with ${email}!`);
    (e.target as HTMLFormElement).reset();
  });
</script>
