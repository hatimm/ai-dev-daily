---
interface Props {
  title: string;
  description?: string;
  image?: string;
  canonicalURL?: string | URL;
  type?: 'website' | 'article';
}

const { 
  title, 
  description = "AI Dev Daily - Your daily source for AI news, tutorials, and developer tools",
  image = "https://aidevdaily.com/wp-content/uploads/2025/02/cropped-AIDEVDAILY-Logo-Original-5000x5000-1-270x270.png",
  canonicalURL = new URL(Astro.url.pathname, Astro.site),
  type = 'website'
} = Astro.props;

const siteName = "AI Dev Daily";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:site_name" content={siteName} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={image} />

    <!-- Favicons -->
    <link rel="icon" type="image/png" sizes="32x32" href="https://aidevdaily.com/wp-content/uploads/2025/02/cropped-AIDEVDAILY-Logo-Original-5000x5000-1-32x32.png" />
    <link rel="icon" type="image/png" sizes="192x192" href="https://aidevdaily.com/wp-content/uploads/2025/02/cropped-AIDEVDAILY-Logo-Original-5000x5000-1-192x192.png" />
    <link rel="apple-touch-icon" href="https://aidevdaily.com/wp-content/uploads/2025/02/cropped-AIDEVDAILY-Logo-Original-5000x5000-1-180x180.png" />
    <meta name="msapplication-TileImage" content="https://aidevdaily.com/wp-content/uploads/2025/02/cropped-AIDEVDAILY-Logo-Original-5000x5000-1-270x270.png" />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&family=Inter:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- Structured Data -->
    <script type="application/ld+json" is:inline set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": siteName,
      "url": "https://aidevdaily.com",
      "logo": "https://aidevdaily.com/wp-content/uploads/2025/02/cropped-AIDEVDAILY-Logo-Original-5000x5000-1-270x270.png",
      "sameAs": [
        "https://twitter.com/aidevdaily",
        "https://linkedin.com/company/aidevdaily"
      ]
    })} />
  </head>
  <body>
    <!-- Reading Progress Bar -->
    <div id="progress-bar"></div>
    <slot />

    <style>
      #progress-bar {
        position: fixed;
        top: 0;
        left: 0;
        width: 0%;
        height: 3px;
        background: var(--purple-primary);
        z-index: 2001;
        transition: width 0.1s ease;
      }
    </style>

    <script>
      window.addEventListener('scroll', () => {
        const winScroll = document.body.scrollTop || document.documentElement.scrollTop;
        const height = document.documentElement.scrollHeight - document.documentElement.clientHeight;
        const scrolled = (winScroll / height) * 100;
        const progressBar = document.getElementById('progress-bar');
        if (progressBar) {
          progressBar.style.width = scrolled + '%';
        }
      });
    </script>
  </body>
</html>

<style is:global>
  :root {
    --purple-primary: #8b5cf6;
    --purple-light: #a78bfa;
    --purple-glow: rgba(139, 92, 246, 0.15);
    --purple-dark: #6d28d9;
    --white: #ffffff;
    --white-cream: #fafafa;
    --gray-50: #fafafa;
    --gray-100: #f5f5f5;
    --gray-200: #e5e5e5;
    --gray-300: #d4d4d4;
    --gray-400: #a3a3a3;
    --gray-500: #737373;
    --gray-600: #404040;
    --gray-700: #262626;
    --gray-800: #171717;
    --black: #000000;
    --accent: #8b5cf6;
    --bg-main: #ffffff;
    --card-bg: #ffffff;
    --border-color: #e5e5e5;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    scroll-behavior: smooth;
    background-color: var(--bg-main);
  }

  body {
    font-family: 'Inter', sans-serif;
    background-color: var(--bg-main);
    color: var(--gray-800);
    line-height: 1.6;
    overflow-x: hidden;
  }

  ::-webkit-scrollbar {
    width: 8px;
  }

  ::-webkit-scrollbar-track {
    background: var(--gray-100);
  }

  ::-webkit-scrollbar-thumb {
    background: var(--purple-light);
    border-radius: 4px;
  }
</style>
