---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getCollection, getEntryBySlug } from 'astro:content';

export async function getStaticPaths() {
  const authors = await getCollection('authors');
  return authors.map(author => ({
    params: { author: author.slug },
    props: { author },
  }));
}

const { author } = Astro.props;
const allPosts = await getCollection('blog');
const authorPosts = allPosts.filter(post => post.data.author === author.data.name);
---

<Layout title={`${author.data.name} - Author Profile`}>
  <Header />
  <main>
    <section class="author-profile-hero">
      <div class="container">
        <div class="profile-header">
          <div class="profile-avatar">
            {author.data.name[0]}
          </div>
          <div class="profile-info">
            <div class="header-badge">Author</div>
            <h1>{author.data.name}</h1>
            <p class="role">{author.data.role}</p>
            <p class="bio">{author.data.bio}</p>
            <div class="social-links">
              {author.data.twitter && <a href={author.data.twitter} target="_blank">Twitter</a>}
              {author.data.linkedin && <a href={author.data.linkedin} target="_blank">LinkedIn</a>}
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="author-posts">
      <div class="container">
        <h2>Articles by {author.data.name.split(' ')[0]}</h2>
        <div class="posts-grid">
          {authorPosts.map(post => (
            <article class="post-card">
              <a href={`/blog/${post.slug}`} class="post-link">
                <div class="post-image">
                  <img src={post.data.image} alt={post.data.title} />
                </div>
                <div class="post-content">
                  <span class="category">{post.data.category}</span>
                  <h3>{post.data.title}</h3>
                  <p>{post.data.excerpt}</p>
                </div>
              </a>
            </article>
          ))}
        </div>
      </div>
    </section>

    <Footer />
  </main>
</Layout>

<style>
  main {
    min-height: 100vh;
    padding-top: 96px;
    background: var(--bg-main);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .author-profile-hero {
    padding: 6rem 0;
    border-bottom: 1px solid var(--border-color);
  }

  .profile-header {
    display: flex;
    gap: 4rem;
    align-items: center;
  }

  .profile-avatar {
    width: 200px;
    height: 200px;
    background: var(--purple-primary);
    border-radius: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--white);
    font-size: 5rem;
    font-weight: 800;
  }

  .profile-info h1 {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 3.5rem;
    color: var(--gray-800);
    margin-bottom: 0.5rem;
  }

  .header-badge {
    display: inline-flex;
    background: rgba(139, 92, 246, 0.1);
    color: var(--purple-light);
    padding: 0.25rem 0.6rem;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    margin-bottom: 1rem;
  }

  .role {
    font-size: 1.25rem;
    color: var(--purple-light);
    font-weight: 600;
    margin-bottom: 1.5rem;
  }

  .bio {
    color: var(--gray-500);
    font-size: 1.15rem;
    line-height: 1.7;
    max-width: 700px;
    margin-bottom: 2rem;
  }

  .social-links {
    display: flex;
    gap: 1.5rem;
  }

  .social-links a {
    color: var(--gray-700);
    text-decoration: none;
    font-weight: 700;
    font-size: 0.9rem;
    padding: 0.5rem 1.25rem;
    background: #f1f5f9;
    border: 1px solid var(--border-color);
    border-radius: 6px;
    transition: all 0.3s ease;
  }

  .social-links a:hover {
    border-color: var(--purple-primary);
    background: var(--purple-primary);
    color: var(--white);
  }

  .author-posts {
    padding: 6rem 0;
  }

  .author-posts h2 {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 2rem;
    color: var(--gray-800);
    margin-bottom: 3rem;
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }

  .post-card {
    background: var(--card-bg);
    border: 1px solid var(--border-color);
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .post-card:hover {
    border-color: var(--purple-primary);
    transform: translateY(-4px);
  }

  .post-link {
    text-decoration: none;
    color: inherit;
  }

  .post-image img {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .post-content {
    padding: 1.5rem;
  }

  .category {
    color: var(--purple-light);
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
    margin-bottom: 0.5rem;
    display: block;
  }

  .post-content h3 {
    font-size: 1.15rem;
    color: var(--gray-800);
    margin-bottom: 0.75rem;
    line-height: 1.4;
  }

  .post-content p {
    color: var(--gray-500);
    font-size: 0.9rem;
    line-height: 1.6;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  @media (max-width: 1024px) {
    .posts-grid { grid-template-columns: repeat(2, 1fr); }
  }

  @media (max-width: 768px) {
    .profile-header { flex-direction: column; text-align: center; gap: 2rem; }
    .posts-grid { grid-template-columns: 1fr; }
    .author-profile-hero { padding: 4rem 0; }
    .profile-info h1 { font-size: 2.5rem; }
  }
</style>
