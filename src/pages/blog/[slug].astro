---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Loader from '../../components/Loader.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

const allPosts = await getCollection('blog');
const relatedPosts = allPosts
  .filter(p => p.data.category === post.data.category && p.slug !== post.slug)
  .slice(0, 3);
---

<Layout 
  title={`${post.data.title} - AI Dev Daily`}
  description={post.data.excerpt}
  image={post.data.image}
  type="article"
>
  <script type="application/ld+json" is:inline set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Article",
    "headline": post.data.title,
    "description": post.data.excerpt,
    "image": post.data.image,
    "author": {
      "@type": "Person",
      "name": post.data.author
    },
    "datePublished": post.data.date,
    "publisher": {
      "@type": "Organization",
      "name": "AI Dev Daily",
      "logo": {
        "@type": "ImageObject",
        "url": "https://aidevdaily.com/wp-content/uploads/2025/02/cropped-AIDEVDAILY-Logo-Original-5000x5000-1-270x270.png"
      }
    }
  })} />
  <Loader />
  <Header />
  <main>
    <article class="blog-post">
      <!-- Hero -->
      <div class="post-hero">
        <div class="hero-bg">
          <div class="gradient-orb orb-1"></div>
          <div class="gradient-orb orb-2"></div>
        </div>
        <div class="hero-content">
          <a href="/blog" class="back-link">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M19 12H5M12 19l-7-7 7-7"/>
            </svg>
            Back to Blog
          </a>
          <div class="post-meta">
            <span class="category">{post.data.category}</span>
            <span class="date">{post.data.date}</span>
            <span class="read-time">{post.data.readTime} min read</span>
          </div>
          <h1>{post.data.title}</h1>
          <p class="excerpt">{post.data.excerpt}</p>
          <a href={`/authors/${post.data.author.toLowerCase().replace(/ /g, '-')}`} class="author">
            <div class="author-avatar">{post.data.author[0]}</div>
            <span>{post.data.author}</span>
          </a>
        </div>
      </div>

      <!-- Featured Image -->
      <div class="post-image">
        <img src={post.data.image} alt={post.data.imageAlt || post.data.title} />
      </div>

      <!-- Content -->
      <div class="post-container">
        {post.data.tldr && (
          <div class="post-tldr">
            <div class="tldr-header">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
              </svg>
              <span>TL;DR – Key Insights</span>
            </div>
            <ul>
              {post.data.tldr.map(item => <li>{item}</li>)}
            </ul>
          </div>
        )}

        <div class="post-layout">
          <div class="post-main">
            <div class="post-content">
              <Content />
            </div>

            <!-- Author Bio -->
            <div class="author-bio-card">
              <div class="bio-avatar">
                {post.data.author[0]}
              </div>
              <div class="bio-info">
                <div class="bio-header">
                  <div>
                    <h3>{post.data.author}</h3>
                    <p>{post.data.authorRole || 'Contributor'}</p>
                  </div>
                  <a href={`/authors/${post.data.author.toLowerCase().replace(/ /g, '-')}`} class="follow-btn">Profile</a>
                </div>
                <p class="bio-text">{post.data.authorBio || 'Tech enthusiast and AI researcher covering the latest in artificial intelligence.'}</p>
              </div>
            </div>
          </div>

          <aside class="post-sidebar">
            <div class="sidebar-widget">
              <h3>Trending Stories</h3>
              <div class="trending-list">
                {allPosts.slice(0, 5).map((trending, index) => (
                  <a href={`/blog/${trending.slug}`} class="trending-item">
                    <span class="trending-num">0{index + 1}</span>
                    <div class="trending-info">
                      <h4>{trending.data.title}</h4>
                      <span>{trending.data.readTime} min read</span>
                    </div>
                  </a>
                ))}
              </div>
            </div>
          </aside>
        </div>

        <!-- Share & Tags -->
        <div class="post-footer">
          <div class="share-section">
            <span>Share this article:</span>
            <div class="share-links">
              <a href="#" aria-label="Twitter">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
              </a>
              <a href="#" aria-label="LinkedIn">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </a>
              <a href="#" aria-label="Copy Link">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"/>
                  <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </article>

    <!-- Related Posts -->
    {relatedPosts.length > 0 && (
      <section class="related-section">
        <div class="related-container">
          <h2>Related Articles</h2>
          <div class="related-grid">
            {relatedPosts.map(related => (
              <a href={`/blog/${related.slug}`} class="related-card">
                <img src={related.data.image} alt={related.data.title} />
                <div class="related-content">
                  <span class="category">{related.data.category}</span>
                  <h3>{related.data.title}</h3>
                  <span class="read-time">{related.data.readTime} min read</span>
                </div>
              </a>
            ))}
          </div>
        </div>
      </section>
    )}
  </main>
  <Footer />
</ Layout>

<style>
  .blog-post {
    padding-top: 96px; /* 32px ticker + 64px header */
    background: var(--bg-main);
  }

  /* Hero */
  .post-hero {
    position: relative;
    padding: 6rem 2rem 4rem;
    background: var(--bg-main);
    overflow: hidden;
    border-bottom: 1px solid var(--border-color);
  }

  .hero-bg {
    position: absolute;
    inset: 0;
  }

  .gradient-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(120px);
    opacity: 0.5;
  }

  .orb-1 {
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, var(--purple-primary) 0%, transparent 70%);
    top: -200px;
    left: -100px;
  }

  .orb-2 {
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, var(--purple-dark) 0%, transparent 70%);
    bottom: -150px;
    right: -100px;
  }

  .hero-content {
    position: relative;
    z-index: 1;
    max-width: 900px;
    margin: 0 auto;
    text-align: center;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--gray-500);
    font-size: 0.9rem;
    text-decoration: none;
    margin-bottom: 2.5rem;
    transition: all 0.3s ease;
  }

  .back-link:hover {
    color: var(--purple-primary);
    transform: translateX(-5px);
  }

  .post-meta {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1.25rem;
    margin-bottom: 2rem;
    flex-wrap: wrap;
  }

  .post-meta .category {
    background: var(--purple-primary);
    color: var(--white);
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
  }

  .post-meta .date,
  .post-meta .read-time {
    color: var(--gray-500);
    font-size: 0.85rem;
    font-weight: 500;
  }

  .post-hero h1 {
    font-family: 'Space Grotesk', sans-serif;
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: 700;
    color: var(--gray-800);
    line-height: 1.1;
    margin-bottom: 1.5rem;
    letter-spacing: -0.02em;
  }

  .excerpt {
    font-size: 1.25rem;
    color: var(--gray-500);
    line-height: 1.6;
    margin-bottom: 2.5rem;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .author {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
  }

  .author-avatar {
    width: 48px;
    height: 48px;
    background: var(--purple-primary);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--white);
    font-weight: 700;
  }

  .author span {
    color: var(--gray-500);
    font-weight: 600;
  }

  /* Image */
  .post-image {
    max-width: 1200px;
    margin: -4rem auto 0;
    padding: 0 2rem;
    position: relative;
    z-index: 2;
  }

  .post-image img {
    width: 100%;
    height: auto;
    max-height: 600px;
    object-fit: cover;
    border-radius: 12px;
    box-shadow: 0 30px 60px rgba(0, 0, 0, 0.5);
    border: 1px solid var(--border-color);
  }

  /* Content Layout */
  .post-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 4rem 2rem 6rem;
  }

  .post-layout {
    display: grid;
    grid-template-columns: 1fr 320px;
    gap: 4rem;
  }

  .post-main {
    min-width: 0;
  }

  .post-sidebar {
    position: sticky;
    top: 120px;
    height: fit-content;
  }

  .sidebar-widget {
    margin-bottom: 3rem;
  }

  .sidebar-widget h3 {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 1.25rem;
    color: var(--gray-800);
    margin-bottom: 1.5rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--border-color);
  }

  .trending-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .trending-item {
    display: flex;
    gap: 1.25rem;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .trending-num {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 1.5rem;
    color: var(--gray-300);
    font-weight: 800;
  }

  .trending-info h4 {
    font-size: 0.95rem;
    color: var(--gray-800);
    line-height: 1.4;
    margin-bottom: 0.25rem;
    transition: color 0.3s ease;
  }

  .trending-item:hover .trending-info h4 {
    color: var(--purple-light);
  }

  .trending-info span {
    font-size: 0.8rem;
    color: var(--gray-600);
  }

  .post-tldr {
    background: var(--card-bg);
    border: 2px solid var(--purple-primary);
    border-radius: 12px;
    padding: 2rem;
    margin-bottom: 3rem;
  }

  .tldr-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: var(--purple-light);
    font-weight: 700;
    text-transform: uppercase;
    font-size: 0.9rem;
    letter-spacing: 0.05em;
    margin-bottom: 1.25rem;
  }

  .post-tldr ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .post-tldr li {
    padding-left: 1.5rem;
    position: relative;
    color: var(--gray-600);
    line-height: 1.5;
  }

  .post-tldr li::before {
    content: "→";
    position: absolute;
    left: 0;
    color: var(--purple-primary);
    font-weight: 700;
  }

  .post-content {
    font-size: 1.15rem;
    line-height: 1.8;
    color: var(--gray-600);
  }

  .post-content :global(h2) {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 2rem;
    font-weight: 700;
    color: var(--gray-800);
    margin: 3rem 0 1.5rem;
  }

  .post-content :global(p) { margin-bottom: 1.75rem; }

  /* Media Queries for Sidebar */
  @media (max-width: 1024px) {
    .post-layout {
      grid-template-columns: 1fr;
    }
    .post-sidebar {
      position: static;
      margin-top: 4rem;
    }
  }

  /* Author Bio Card */
  .author-bio-card {
    margin-top: 6rem;
    padding: 3rem;
    background: var(--card-bg);
    border-radius: 12px;
    border: 1px solid var(--border-color);
    display: flex;
    gap: 2rem;
    align-items: flex-start;
  }

  .bio-avatar {
    width: 80px;
    height: 80px;
    background: var(--purple-primary);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--white);
    font-size: 2rem;
    font-weight: 700;
    flex-shrink: 0;
  }

  .bio-info { flex: 1; }

  .bio-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1rem;
  }

  .bio-header h3 {
    font-size: 1.5rem;
    color: var(--gray-800);
    margin-bottom: 0.25rem;
  }

  .bio-header p {
    color: var(--purple-light);
    font-weight: 600;
    font-size: 0.9rem;
  }

  .follow-btn {
    background: #f1f5f9;
    color: var(--gray-800);
    border: 1px solid var(--border-color);
    padding: 0.5rem 1.25rem;
    border-radius: 6px;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .follow-btn:hover {
    background: var(--purple-primary);
    color: var(--white);
  }

  .bio-text {
    color: var(--gray-500);
    line-height: 1.6;
    font-size: 1rem;
  }

  /* Related Posts */
  .related-section {
    padding: 6rem 2rem;
    background: var(--bg-main);
    border-top: 1px solid var(--border-color);
  }

  .related-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .related-container h2 {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 2rem;
    font-weight: 700;
    color: var(--gray-800);
    margin-bottom: 3rem;
  }

  .related-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }

  .related-card {
    background: var(--card-bg);
    border: 1px solid var(--border-color);
    border-radius: 12px;
    overflow: hidden;
    text-decoration: none;
    transition: all 0.4s ease;
  }

  .related-card:hover { border-color: var(--purple-primary); transform: translateY(-4px); }

  .related-card img { width: 100%; height: 200px; object-fit: cover; }

  .related-content { padding: 1.5rem; }

  .related-content .category { color: var(--purple-light); font-weight: 700; text-transform: uppercase; font-size: 0.7rem; }

  .related-content h3 { font-size: 1.1rem; color: var(--gray-800); margin: 0.5rem 0; line-height: 1.4; }

  @media (max-width: 1024px) { .related-grid { grid-template-columns: repeat(2, 1fr); } }

  @media (max-width: 768px) {
    .related-grid { grid-template-columns: 1fr; }
    .author-bio-card { flex-direction: column; padding: 2rem; text-align: center; align-items: center; }
    .bio-header { flex-direction: column; align-items: center; gap: 1rem; }
    .post-hero h1 { font-size: 2.5rem; }
  }
</style>
